<!DOCTYPE html>
<html lang="zh">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - 酒店一卡通查询系统</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/site.css")
        <!-- DataTables CSS -->
        @Styles.Render("~/Content/bower_components/bootstrap/dist/css/bootstrap.min.css")
        @Styles.Render("~/Content/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css")
        @Scripts.Render("~/bundles/modernizr")

        <!-- jQuery -->
        @Scripts.Render("~/Content/bower_components/jquery/dist/jquery.min.js")
        @Scripts.Render("~/Content/js/jquery-ui.min.js") <!-- jQuery UI -->
        @Scripts.Render("~/Content/js/jquery.easing.1.3.js") <!-- jQuery Easing - Requirred for Lightbox + Pie Charts-->
        <!-- Bootstrap -->
        @Scripts.Render("~/Content/bower_components/bootstrap/dist/js/bootstrap.min.js")

        <!-- Charts -->
        @Scripts.Render("~/Content/js/charts/jquery.flot.js") <!-- Flot Main -->
        @Scripts.Render("~/Content/js/charts/jquery.flot.categories.js")
        @Scripts.Render("~/Content/js/charts/jquery.flot.time.js") <!-- Flot sub -->
        @Scripts.Render("~/Content/js/charts/jquery.flot.animator.min.js") <!-- Flot sub -->
        @Scripts.Render("~/Content/js/charts/jquery.flot.resize.min.js") <!-- Flot sub - for repaint when resizing the screen -->
        @Scripts.Render("~/Content/bower_components/jquery.cookie.js")

        <!-- DataTables JavaScript -->
        @Scripts.Render("~/Content/bower_components/datatables/media/js/jquery.dataTables.js")
        @Scripts.Render("~/Content/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js")

        @Scripts.Render("~/Content/js/sparkline.min.js") <!-- Sparkline - Tiny charts -->
        @Scripts.Render("~/Content/js/easypiechart.js") <!-- EasyPieChart - Animated Pie Charts -->
        @Scripts.Render("~/Content/js/charts.js") <!-- All the above chart related functions -->

        <!-- DatePicker-->
        @Scripts.Render("~/Content/bower_components/datepicker/bootstrap-datepicker.js")
        @Styles.Render("~/Content/bower_components/datepicker/datepicker.css")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left" style="margin-bottom:5px;">
                    <p class="site-title">@Html.ActionLink("酒店一卡通查询系统", "Index", "Home")</p>
                </div>
                <div class="float-right" style="margin: 20px 15px 0 0;">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
                @if (User.Identity.IsAuthenticated) { 
                    <nav class="navbar navbar-default" role="navigation" style="clear:both;">
                        <div class="container-fluid">
                            <div class="navbar-header">
                                <a class="navbar-brand" href="#"></a>
                            </div>
                            
                            <ul class="nav navbar-nav navbar-right">
                                @if (User.IsInRole("管理员"))
                                {
                                    <li><a href="/account/userlist" style="padding: 15px 10px !important; margin-left:50px;"><span class="glyphicon glyphicon-user"></span> 用户管理</a></li>
                                    <li><a href="/tools/log" style="padding: 15px 10px !important;"><span class="glyphicon glyphicon-list-alt"></span> 日志</a></li>
                                }
                                <li><a href="/account/logoff" style="padding: 15px 10px !important; margin-right:5px;"><span class="glyphicon glyphicon-log-out"></span> 注销</a></li>
                            </ul>

                            <div>
                                <ul class="nav navbar-nav navbar-left">
                                    @if (User.IsInRole("管理员") || User.IsInRole("前厅部"))
                                    {
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                前厅部 <b class="caret"></b>
                                            </a>
                                            <ul class="dropdown-menu ">
                                                <li>@Html.ActionLink("客房数据导入", "import", "tools")</li>
                                                <li class="divider"></li>
                                                <li>@Html.ActionLink("当日客房数据", "DailyRoomBooking", "Report")</li>
                                                <li class="divider"></li>
                                                <li>@Html.ActionLink("客房历史数据", "RoomBookingHistory", "Report")</li>
                                            </ul>
                                        </li>
                                    }
                                    @if (User.IsInRole("管理员") || User.IsInRole("餐饮部") || User.IsInRole("财务部"))
                                    {
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                餐饮部 <b class="caret"></b>
                                            </a>
                                            <ul class="dropdown-menu ">
                                                <li>@Html.ActionLink("当日就餐数据", "DailyConsumption", "Report")</li>
                                                <li class="divider"></li>
                                                <li>@Html.ActionLink("历史就餐数据", "ConsumptionHistory", "Report")</li>
                                                <li class="divider"></li>
                                                <li>@Html.ActionLink("月度就餐统计", "MonthlyConsumption", "Report")</li>
                                                <li class="divider"></li>
                                                <li>@Html.ActionLink("年度就餐统计", "YearlyConsumption", "Report")</li>
                                            </ul>
                                        </li>
                                    }
                                    @if (User.IsInRole("管理员") || User.IsInRole("客房部") || User.IsInRole("财务部"))
                                    {
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                客房部 <b class="caret"></b>
                                            </a>
                                            <ul class="dropdown-menu ">
                                                <li>@Html.ActionLink("健身中心当日数据", "DailyFitness", "Report")</li>
                                                <li class="divider"></li>
                                                <li>@Html.ActionLink("健身中心历史数据", "FitnessHistory", "Report")</li>
                                            </ul>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </nav>
                }
                
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="center">
                    <br/>
                    <p>&copy; @DateTime.Now.Year - 酒店一卡通查询系统</p>
                </div>
            </div>
        </footer>
        @RenderSection("scripts", required: false)
    </body>
</html>
