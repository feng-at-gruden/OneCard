@model IEnumerable<OneCard.Models.UserViewModel>

@{
    ViewBag.Title = "用户列表";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
            </hgroup>
        </div>
    </section>
}

<div class="panel panel-default">
    <div class="panel-heading">
        USER LIST
    </div>
    <div class="panel-body">
        <div class="dataTable_wrapper">
            <div style="text-align: right; float: right; margin: 10px 10px 0 0;">
                <span> </span>
            </div>
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th style="text-align: center;">ID</th>
                        <th>用户名</th>
                        <th>真实姓名</th>
                        <th>部门</th>
                        <th style="text-align: center;">注册时间</th>
                        <th style="text-align: center;">最后登录时间</th>
                        <th style="text-align: center;">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (OneCard.Models.UserViewModel item in Model)
                    {
                        <tr class="odd">
                            <td style="text-align: center; font-weight: bold;"><a href="/account/userinfo?id=@item.ID" style="padding:5px;">@Html.DisplayFor(modelItem => item.ID)</a></td>
                            <td style="text-align: left; padding-left:15px;">@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td style="text-align: left; padding-left: 15px;">@Html.DisplayFor(modelItem => item.RealName)</td>
                            <td style="text-align: left; padding-left: 15px;">@Html.DisplayFor(modelItem => item.RoleName)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.RegisterTime)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.LastLoginTime)</td>
                            <td style="text-align: center;">
                                <a href="~/account/userinfo?id=@item.ID" title="编辑" style="padding:5px;"><span class="glyphicon glyphicon-edit">编辑</span></a>
                                <a href="~/account/lock?id=@item.ID" title="锁定" style="padding:5px;"><span class="glyphicon glyphicon-lock">锁定</span></a>
                                <a href="~/account/delete?id=@item.ID" title="删除" style="padding:5px;"><span class="glyphicon glyphicon-remove">删除</span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <button type="button" class="btn btn-success" style="float: left; margin-top: -42px;">
                添加用户
            </button>
        </div>
        <!-- /.Table -->
    </div>
    <!-- /.panel-body -->
    <div class="panel-footer">
        &nbsp;
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            "responsive": true,
            "paging": true,
            "ordering": true,
            "info": false,
            "searching": false,
            "pageLength": 25,
        });
    });
</script>