@model IEnumerable<OneCard.Models.RoomDataViewModel>

@{
    ViewBag.Title = "当日数据汇总";
    int total = Model.Sum(m=>m.Count);
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
                <h2>DAILY REPORT</h2>
            </hgroup>
        </div>
    </section>
}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="dataTable_wrapper">
            <div style="text-align: right; float: right; margin: 10px 10px 0 0;">
                <span>共<b>@Model.Count()</b>间客房 用餐<b>@total</b>次    日期:<b>@ViewBag.Date</b></span>
            </div>
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>房间号</th>
                        <th>时段1</th>
                        <th>时段2</th>
                        <th>时段3</th>
                        <th>时段4</th>
                        <th>用餐总数</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd">
                            <td style="text-align: center; font-weight: bold;">@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count1)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count2)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count3)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count4)</td>
                            <td style="text-align: center; color:#ff6a00; font-weight:bold;">@Html.DisplayFor(modelItem => item.Count)</td>
                        </tr>
                        total += item.Count;
                    }
                </tbody>
            </table>
            
        </div>
        <!-- /.Table -->
    </div>
    <!-- /.panel-body -->
    <div class="panel-footer">
        &nbsp;
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            "responsive": true,
            "paging": true,
            "ordering": true,
            "info": false,
            "searching": false,
            "pageLength": 50,
        });
    });
</script>