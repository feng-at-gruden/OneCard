@model IEnumerable<OneCard.Models.RoomDataViewModel>

@{
    ViewBag.Title = "当日数据汇总";
    int total = 0;
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
                <h2>DAILY REPORT</h2>
            </hgroup>
        </div>
    </section>
}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:640px;">
                <thead>
                    <tr>
                        <th>房间号</th>
                        <th>时段1</th>
                        <th>时段2</th>
                        <th>时段3</th>
                        <th>时段4</th>
                        <th>用餐总数</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd">
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count1)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count2)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count3)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count4)</td>
                            <td style="text-align: center; color:#ff6a00; font-weight:bold;">@Html.DisplayFor(modelItem => item.Count)</td>
                        </tr>
                        total += item.Count;
                    }
                    <tr>
                        <td colspan="6" style="text-align:right"><b>@Model.Count()/@total |  @ViewBag.Date</b></td>
                    </tr>
                </tbody>
            </table>
            
        </div>
        <!-- /.Table -->
    </div>
    <!-- /.panel-body -->
    <div class="panel-footer">
        &nbsp;
    </div>
</div>

