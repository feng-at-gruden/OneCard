@model IEnumerable<OneCard.Models.MonthlyCosumptionViewModel>

@{
    ViewBag.Title = ViewBag.Year + "年度就餐数据统计";

    List<int> years = new List<int>(); ;
    for (int i = 2016; i <= DateTime.Now.Year; i++)
    {
        years.Add(i);
    }
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
            </hgroup>
        </div>
    </section>
}

@if (Model == null)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            YEARLY CONSUMPTION
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
            
                @using (Html.BeginForm("YearlyConsumption", "Report", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div style="width:600px; margin:auto; text-align:center;">
                        <div class="form-group">
                            <div class='input-group date'>
                                @Html.DropDownList("Year", new SelectList(years), new { @class = "form-control" })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">统 计</button>
                    </div>
                }

            </div>
            <!-- /.Table -->
        </div>
        <!-- /.panel-body -->
        <div class="panel-footer">
            &nbsp;
        </div>
    </div>
}
else
{
    int total = Model.Sum(m => m.Total);
    <div class="panel panel-default">
        <div class="panel-heading">
            @ViewBag.Year CONSUMPTION STATISTICS
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <div style="text-align: right; float: right; margin: 10px 10px 0 0;">
                    <span> <b>@ViewBag.Year</b>年度 总计就餐:<b>@total</b>次 </span>
                </div>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>月份</th>
                            <th>时段1</th>
                            <th>时段2</th>
                            <th>时段3</th>
                            <th>时段4</th>
                            <th>当月总计</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd">
                                <td style="text-align: center; font-weight: bold;">@Html.DisplayFor(modelItem => item.Month)</td>
                                <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count1)</td>
                                <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count2)</td>
                                <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count3)</td>
                                <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count4)</td>
                                <td style="text-align: center; color:#ff6a00; font-weight:bold;">@Html.DisplayFor(modelItem => item.Total)</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @using (Html.BeginForm("YearlyConsumption", "Report", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Year" value="@ViewBag.Year" />
                    <input type="hidden" name="exportCSV" value="true" />
                    <button type="submit" class="btn btn-success" style="float: left; margin-top: -42px; margin-left: 65px;">
                        导 出
                    </button>
                    <button type="button" class="btn btn-success" onclick="javastript: history.go(-1);" style="float: left; margin-top: -42px; ">
                        返 回
                    </button>
                }
            </div>
            <!-- /.Table -->
        </div>
        <!-- /.panel-body -->
        <div class="panel-footer">
            &nbsp;
        </div>

        <!-- Bar Chart-->
        <div class="demo-container" style="height: 400px; width: 800px; margin: auto;">
            <div id="chart-placeholder" style="height:400px; width:800px;"></div>
        </div>

    </div>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                "responsive": true,
                "paging": true,
                "ordering": true,
                "info": false,
                "searching": false,
                "pageLength": 25,
            });
        });
    </script>
    
    
    <script type="text/javascript">
	$(function() {
	    var data = [
            @foreach( var d in Model)
            {
                <text>['@d.Month', @d.Total],</text>
            }
	    ];

	    $.plot("#chart-placeholder", [data], {
	        series: {
	            bars: {
	                show: true,
	                barWidth: 0.6,
	                align: "center",
	            }
	        },
	        xaxis: {
	            mode: "categories",
	            tickLength: 0
	        },
	        colors: ["#007ACC"]
	    });

	});
	</script>
    
}