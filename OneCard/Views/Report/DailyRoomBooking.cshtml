@model IEnumerable<OneCard.Models.RoomBookingDataViewModel>

@{
    ViewBag.Title = "当日客房入住数据";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
        </div>
    </section>
}

<div class="panel panel-default">
    <div class="panel-heading">
        DAILY ROOM BOOKING
    </div>
    <div class="panel-body">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">
                @ViewBag.SuccessMessage
            </div>
        }
        <div class="dataTable_wrapper">
            <div style="text-align: right; float: right; margin: 10px 10px 0 0;">
                <span>共<b>@Model.Count()</b>间客房   数据导入时间:<b>@ViewBag.Date</b></span>
            </div>
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>房间号</th>
                        <th>客人姓名</th>
                        <th>中文名</th>
                        <th>入住时间</th>
                        <th>退房时间</th>
                        <th>Adults</th>
                        <th>VIP</th>
                        <th>RateCode</th>
                        <th>Package</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd">
                            <td style="text-align: center; font-weight: bold;">@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.GuestName)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.ChineseName)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.ArriveTime)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.DepartTime)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Adults)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.VIP)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.RateCode)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Package)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="~/Report/DailyRoomBooking?exportCSV=true" class="btn btn-success" style="float: left;margin-top: -42px; color:white;">导 出</a>
            <a href="~/Report/DailyRoomBooking?mail=true" class="btn btn-success" style="float: left;margin-top: -42px; margin-left:63px; color:white;" on>发送至邮箱</a>
        </div>
        <!-- /.Table -->
    </div>
    <!-- /.panel-body -->
    <div class="panel-footer">
        &nbsp;
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            "responsive": true,
            "paging": true,
            "ordering": true,
            "info": false,
            "searching": false,
            "pageLength": 25,
        });
    });
</script>