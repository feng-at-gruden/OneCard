@model IEnumerable<OneCard.Models.DailyCosumptionViewModel>

@{
    ViewBag.Title = ViewBag.Year + "年" + ViewBag.Month + "月用餐数据统计";

    List<int> years = new List<int>(); ;
    for (int i = DateTime.Now.Year; i >= 2016; i--)
    {
        years.Add(i);
    }
    List<int> months = new List<int>(); ;
    for (int i = 1; i <= 12; i++)
    {
        months.Add(i);
    }
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
            </hgroup>
        </div>
    </section>
}

@if (Model == null)
{
    ViewBag.Title = "月度用餐数据统计";
    <div class="panel panel-default">
        <div class="panel-heading">
            MONTHLY CONSUMPTION
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">

                @using (Html.BeginForm("MonthlyConsumption", "Report", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div style="width:400px; margin:auto; text-align:center;">
                        <div class="form-group">
                            <div class='input-group date'>
                                @Html.DropDownList("Year", new SelectList(years), new { @class = "form-control" })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class='input-group date'>
                                @Html.DropDownList("Month", new SelectList(months), new { @class = "form-control" })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">统 计</button>
                    </div>
                }

            </div>
            <!-- /.Table -->
        </div>
        <!-- /.panel-body -->
        <div class="panel-footer">
            &nbsp;
        </div>
    </div>
}
else
{
    int days = DateTime.DaysInMonth((int)ViewBag.Year, (int)ViewBag.Month); 
    int total = Model.Sum(m => m.Total);
    <div class="panel panel-default">
        <div class="panel-heading">
            MONTHLY CONSUMPTION
        </div>
        <div class="panel-body">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success">
                    @ViewBag.SuccessMessage
                </div>
            }
            <div class="dataTable_wrapper">
                <div style="text-align: right; float: right; margin: 10px 10px 0 0;">
                    <span> <b>@ViewBag.Year</b>年<b>@ViewBag.Month</b>月总计用餐:<b>@total</b>次 </span>
                </div>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>日期</th>
                            <th style ="text-align:center;">6:30 - 7:30</th>
                            <th style="text-align:center;">7:30 - 9:00</th>
                            <th style="text-align:center;">9:00 - 10:30</th>
                            <th style="text-align:center;">其他时段</th>
                            <th>当天总计</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd">
                                <td style="text-align: center; font-weight: bold;">@Html.ActionLink(item.Day, "DailyConsumptionSummary", new { year=ViewBag.Year, month=ViewBag.Month, day=item.Day })</td>
                                <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count1)</td>
                                <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count2)</td>
                                <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count3)</td>
                                <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count4)</td>
                                <td style="text-align: center; color:#ff6a00; font-weight:bold;">@Html.DisplayFor(modelItem => item.Total)</td>
                                <td style="text-align: center;">@Html.ActionLink(" ", "DailyConsumptionSummary", new { year = ViewBag.Year, month = ViewBag.Month, day = item.Day }, new { @class = "glyphicon glyphicon-info-sign" })</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <button type="button" class="btn btn-success" onclick="javastript: history.go(-1);" style="float: left; margin-top: -42px; ">
                    返 回
                </button>
                @using (Html.BeginForm("MonthlyConsumption", "Report", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Year" value="@ViewBag.Year" />
                    <input type="hidden" name="Month" value="@ViewBag.Month" />
                    <input type="hidden" name="exportCSV" value="true" />
                    <button type="submit" class="btn btn-success" style="float: left; margin-top: -42px; margin-left: 65px;">
                        导 出
                    </button>
                }
                @using (Html.BeginForm("MonthlyConsumption", "Report", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Year" value="@ViewBag.Year" />
                    <input type="hidden" name="Month" value="@ViewBag.Month" />
                    <input type="hidden" name="mail" value="true" />
                    <button type="submit" class="btn btn-success" style="float: left; margin-top: -42px; margin-left: 130px;">
                        发送至邮箱
                    </button>
                }
            </div>
            <!-- /.Table -->
        </div>

        <!-- /.panel-body -->
        <div class="panel-footer">
            &nbsp;
        </div>

        @if(Model.Count()>0)
        {
        <!-- Bar Chart-->
        <div class="demo-container" style="height: 400px; width: 800px; margin: auto;">
            <div id="chart-placeholder" style="height:400px; width:800px;"></div>
        </div>
        }
    </div>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                "responsive": true,
                "paging": true,
                "ordering": true,
                "info": false,
                "searching": false,
                "pageLength": 50,
                "aoColumnDefs": [ { "bSortable": false, "aTargets": [ 6 ] }] 
            });
        });
    </script>
    
        if(Model.Count()>0)
        {
            <script type="text/javascript">
                function tickFormatter(val, axis) {
                    return parseInt(val) + "";
                }

	            $(function() {
	                var data = [];
	                for(var i=1; i < @Model.First().Day; i++)
	                {
	                    data.push([i, 0]);
	                }

                    @{
                        foreach(var m in Model)
                        {
                            <text>data.push([@m.Day, @m.Total]);</text>
                        }
                    }

	                $.plot("#chart-placeholder", [data], {
	                    xaxis : {
	                        minTickSize : 1,
	                        ticks: @days,
	                        min:1,
	                        tickFormatter: tickFormatter,
	                    },
	                });

	            });

            
	        </script>
        }
    
}