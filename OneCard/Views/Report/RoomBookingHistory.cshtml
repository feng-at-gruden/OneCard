@model IEnumerable<OneCard.Models.RoomBookingDataViewModel>

@{
    ViewBag.Title = "客房入住历史数据";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
            </hgroup>
        </div>
    </section>
}

@if (Model == null)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            BOOKING HISTORY
        </div>
        <div class="panel-body">
            @if(!ViewData.ModelState.IsValid)
            {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
            }

            @using (Html.BeginForm("RoomBookingHistory", "Report", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div style="width:400px; margin:auto; text-align:center;">

                    <div class="form-group">
                        <div class='input-group date'>
                            <input type='text' class="form-control" id='datetimepicker1' name="StartTime" placeholder="起始时间" autocomplete="off" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class='input-group date'>
                            <input type='text' class="form-control" id='datetimepicker2' name="EndTime" placeholder="截至时间" autocomplete="off" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class='input-group'>
                            <input type='text' class="form-control" name="room" placeholder="房间号" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-user"></span>
                            </span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">查 询</button>
                </div>
            }
        </div>
        <!-- /.panel-body -->
        <div class="panel-footer">
            &nbsp;
        </div>
    </div>
    
    <script type="text/javascript">
        $(document).ready(function () {
            jQuery.datetimepicker.setLocale('zh');
            $('#datetimepicker1').datetimepicker({
                timepicker: false,
                format: 'Y/m/d',
                mask: false,
            });

            $('#datetimepicker2').datetimepicker({
                timepicker: false,
                format: 'Y/m/d',
                mask: false,
            });
        });
    </script>
}
else
{
    
    if(!ViewData.ModelState.IsValid)
    { 
        <div class="alert alert-danger">
            @Html.ValidationSummary()
        </div>
    }
    else
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                CONSUMPTION HISTORY
            </div>
            <div class="panel-body">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }

                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.SuccessMessage
                    </div>
                }
                <div class="dataTable_wrapper">
                    <div style="text-align: right; float: right; margin: 10px 10px 0 0;">
                        <span>共<b>@Model.Count()</b>间客房   日期:<b>@ViewBag.Date</b></span>
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="font-size:0.8em;">
                        <thead>
                            <tr>
                                <th>房间号</th>
                                <th>客人姓名</th>
                                <th>中文名</th>
                                <th>入住时间</th>
                                <th>退房时间</th>
                                <th>Adults</th>
                                <th>VIP</th>
                                <th>Pax</th>
                                <th>Package</th>
                                <th>导入时间</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd">
                                    <td style="text-align: center; font-weight: bold;">@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.GuestName)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.ChineseName)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.ArriveTime)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.DepartTime)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Adults)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.VIP)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Pax)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Package)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.InTime)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <button type="button" class="btn btn-success" onclick="javastript: history.go(-1);" style="float: left; margin-top: -42px;">
                        返 回
                    </button>
                    @using (Html.BeginForm("RoomBookingHistory", "Report", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="StartTime" value="@ViewBag.StartTime" />
                        <input type="hidden" name="EndTime" value="@ViewBag.EndTime" />
                        <input type="hidden" name="room" value="@ViewBag.room" />
                        <input type="hidden" name="exportCSV" value="true" />
                        
                        <button type="submit" class="btn btn-success" style="float: left;margin-top: -42px; margin-left: 65px;">
                            导 出
                        </button>
                    }
                    @using (Html.BeginForm("RoomBookingHistory", "Report", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="StartTime" value="@ViewBag.StartTime" />
                        <input type="hidden" name="EndTime" value="@ViewBag.EndTime" />
                        <input type="hidden" name="room" value="@ViewBag.room" />
                        <input type="hidden" name="mail" value="true" />
                        <button type="submit" class="btn btn-success" style="float: left; margin-top: -42px; margin-left: 130px;">
                            发送至邮箱
                        </button>
                    }
                </div>
                <!-- /.Table -->
            </div>
            <!-- /.panel-body -->
            <div class="panel-footer">
                &nbsp;
            </div>
        </div>

        <script>
            $(document).ready(function () {
                $('#dataTables-example').DataTable({
                    "responsive": true,
                    "paging": true,
                    "ordering": true,
                    "info": false,
                    "searching": false,
                    "pageLength": 25,
                });
            });
        </script>
    }
    
}
