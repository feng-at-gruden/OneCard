@model IEnumerable<OneCard.Models.RoomDataViewModel>

@{
    ViewBag.Title = "历史数据查询";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
                <h2>HISTORY RECORDS</h2>
            </hgroup>
        </div>
    </section>
}

@if (Model == null)
{
    <div class="panel panel-default">
        <div class="panel-body">
            @using (Html.BeginForm("History", "Report", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                
                @Html.TextBox("StartTime", null, new { @class = "TotalCostCash", placehoder="起始时间" })
                
                <button type="submit" class="btn btn-success">确认</button>
            }
        </div>
        <!-- /.panel-body -->
        <div class="panel-footer">
            &nbsp;
        </div>
    </div>
}
else
{
    
    if(!ViewData.ModelState.IsValid)
    { 
        <div class="alert alert-danger">
            @Html.ValidationSummary()
        </div>
    }
    else
    {
        int total = Model.Sum(m => m.Count);
    
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <div style="text-align: right; float: right; margin: 10px 10px 0 0;">
                        <span>共<b>@Model.Count()</b>间客房 总计用餐<b>@total</b>次    日期:<b>@ViewBag.Date</b></span>
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>房间号</th>
                                <th>时段1</th>
                                <th>时段2</th>
                                <th>时段3</th>
                                <th>时段4</th>
                                <th>用餐总数</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd">
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count1)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count2)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count3)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count4)</td>
                                    <td style="text-align: center; color:#ff6a00; font-weight:bold;">@Html.DisplayFor(modelItem => item.Count)</td>
                                </tr>
                                total += item.Count;
                            }
                        </tbody>
                    </table>

                </div>
                <!-- /.Table -->
            </div>
            <!-- /.panel-body -->
            <div class="panel-footer">
                &nbsp;
            </div>
        </div>

        <script>
            $(document).ready(function () {
                $('#dataTables-example').DataTable({
                    "responsive": true,
                    "paging": true,
                    "ordering": true,
                    "info": false,
                    "searching": false,
                });
            });
        </script>
    }
    
}
