@model IEnumerable<OneCard.Models.RoomCosumptionDataViewModel>

@{
    ViewBag.Title = "历史用餐数据明细查询";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
            </hgroup>
        </div>
    </section>
}

@if (Model == null)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            CONSUMPTION HISTORY
        </div>
        <div class="panel-body">
            @if (!ViewData.ModelState.IsValid)
            {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
            }

            @using (Html.BeginForm("ConsumptionHistory", "Report", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div style="width:400px; margin:auto; text-align:center;">

                    <div class="form-group">
                        <div class='input-group date'>
                            <input type='text' class="form-control" id='datetimepicker1' name="StartDate" placeholder="起始日期" autocomplete="off" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class='input-group date'>
                            <input type='text' class="form-control" id='datetimepicker2' name="EndDate" placeholder="截至日期" autocomplete="off" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class='input-group date'>
                            <input type='text' class="form-control" id='datetimepicker3' name="StartTime" placeholder="起始时间" autocomplete="off" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-time"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class='input-group date'>
                            <input type='text' class="form-control" id='datetimepicker4' name="EndTime" placeholder="截至时间" autocomplete="off" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-time"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class='input-group'>
                            <input type='text' class="form-control" name="room" placeholder="房间号" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-user"></span>
                            </span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">查 询</button>
                </div>
            }
        </div>
        <!-- /.panel-body -->
        <div class="panel-footer">
            &nbsp;
        </div>
    </div>
    
    <script type="text/javascript">
        $(document).ready(function () {
            jQuery.datetimepicker.setLocale('zh');
            $('#datetimepicker1').datetimepicker({
                timepicker: false,
                format: 'Y/m/d',
                mask: false,
            });

            $('#datetimepicker2').datetimepicker({
                timepicker: false,
                format: 'Y/m/d',
                mask: false,
            });

            $('#datetimepicker3').datetimepicker({
                datepicker: false,
                format: "H:i",
                mask: false,
                allowTimes: [
                    '05:00', '05:30',
                    '06:00', '06:30',
                    '07:00', '07:30',
                    '08:00', '08:30',
                    '09:00', '09:30',
                    '10:00', '10:30',
                    '11:00', '11:30',
                    '12:00', '12:30',
                    '13:00', '13:30',
                    '14:00', '14:30',
                    '17:00', '17:30',
                    '18:00', '18:30',
                    '19:00', '19:30',
                    '20:00', '20:30',
                    '21:00', '21:30',
                ]
            });

            $('#datetimepicker4').datetimepicker({
                datepicker: false,
                format: 'H:i',
                mask: false,
                allowTimes: [
                    '05:00', '05:30',
                    '06:00', '06:30',
                    '07:00', '07:30',
                    '08:00', '08:30',
                    '09:00', '09:30',
                    '10:00', '10:30',
                    '11:00', '11:30',
                    '12:00', '12:30',
                    '13:00', '13:30',
                    '14:00', '14:30',
                    '17:00', '17:30',
                    '18:00', '18:30',
                    '19:00', '19:30',
                    '20:00', '20:30',
                    '21:00', '21:30',
                ]
            });
        });
    </script>
}
else
{
    
    if(!ViewData.ModelState.IsValid)
    { 
        <div class="alert alert-danger">
            @Html.ValidationSummary()
        </div>
    }
    else
    {
        int total = Model.Sum(m => m.Count);
        <div class="panel panel-default">
            <div class="panel-heading">
                CONSUMPTION HISTORY
            </div>
            <div class="panel-body">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }

                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.SuccessMessage
                    </div>
                }
                <div class="dataTable_wrapper">
                    <div style="text-align: right; float: right; margin: 10px 10px 0 0;">
                        <span> 总计用餐<b>@total</b>次    日期:<b>@ViewBag.Date</b></span>
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="font-size:12px;">
                        <thead>
                            <tr>
                                <th>房间号</th>
                                <th>6:30 - 7:30</th>
                                <th>7:30 - 9:00</th>
                                <th>9:00 - 10:30</th>
                                <th>其他时段</th>
                                <th>Package</th>
                                <th>含早</th>
                                <th>打卡时间</th>
                                <th>终端</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd">
                                    <td style="text-align: center; font-weight: bold;">@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count1)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count2)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count3)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Count4)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Package)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.IncludeBreakfast)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.CheckInTime)</td>
                                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.DeviceID)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <button type="button" class="btn btn-success" onclick="javastript: history.go(-1);" style="float: left; margin-top: -42px; ">
                        返 回
                    </button>
                    @using (Html.BeginForm("ConsumptionHistory", "Report", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="StartDate" value="@ViewBag.StartDate" />
                        <input type="hidden" name="EndDate" value="@ViewBag.EndDate" />
                        <input type="hidden" name="StartTime" value="@ViewBag.StartTime" />
                        <input type="hidden" name="EndTime" value="@ViewBag.EndTime" />
                        <input type="hidden" name="room" value="@ViewBag.room" />
                        <input type="hidden" name="exportCSV" value="true" />
                        <button type="submit" class="btn btn-success" style="float: left; margin-top: -42px; margin-left: 65px;">
                            导 出
                        </button>
                    }
                    @using (Html.BeginForm("ConsumptionHistory", "Report", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="StartDate" value="@ViewBag.StartDate" />
                        <input type="hidden" name="EndDate" value="@ViewBag.EndDate" />
                        <input type="hidden" name="StartTime" value="@ViewBag.StartTime" />
                        <input type="hidden" name="EndTime" value="@ViewBag.EndTime" />
                        <input type="hidden" name="room" value="@ViewBag.room" />
                        <input type="hidden" name="mail" value="true" />
                        <button type="submit" class="btn btn-success" style="float: left; margin-top: -42px; margin-left: 130px;">
                            发送至邮箱
                        </button>
                    }
                    
                </div>
                <!-- /.Table -->
            </div>
            <!-- /.panel-body -->
            <div class="panel-footer">
                &nbsp;
            </div>
        </div>

        <script>
            $(document).ready(function () {
                $('#dataTables-example').DataTable({
                    "responsive": true,
                    "paging": true,
                    "ordering": true,
                    "info": false,
                    "searching": false,
                    "pageLength": 25,
                });
            });
        </script>
    }
    
}
