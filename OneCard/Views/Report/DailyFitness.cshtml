@model IEnumerable<OneCard.Models.FitnessDataViewModel>

@{
    ViewBag.Title = "当日健身中心数据汇总";
    int total = Model.Sum(m => m.Count);
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
            </hgroup>
        </div>
    </section>
}

<div class="panel panel-default">
    <div class="panel-heading">
        FITNESS CENTER DAILY REPORT
    </div>
    <div class="panel-body">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">
                @ViewBag.SuccessMessage
            </div>
        }
        <div class="dataTable_wrapper" style="margin:auto auto;">
            <div style="text-align: right; float: right; margin: 10px 10px 0 0;">
                <span>共<b>@Model.Count()</b>间客房 打卡<b>@total</b>次    日期:<b>@ViewBag.Date</b></span>
            </div>
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>房间号</th>
                        <th style="text-align: center;">打卡次数</th>
                        <th style="text-align: center;">打卡时间</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd">
                            <td style="text-align: left; font-weight: bold; padding-left:20px;">@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                            <td style="text-align: center; color:#ff6a00; font-weight:bold;">@Html.DisplayFor(modelItem => item.Count)</td>
                            <td style="text-align: center; ">@Html.DisplayFor(modelItem => item.CheckInTime)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="~/Report/DailyFitness?exportCSV=true" class="btn btn-success" style="float: left;margin-top: -42px; color:white;">导 出</a>
            <a href="~/Report/DailyFitness?mail=true" class="btn btn-success" style="float: left;margin-top: -42px; margin-left:63px; color:white;">发送至邮箱</a>
        </div>
        <!-- /.Table -->
    </div>
    <!-- /.panel-body -->
    <div class="panel-footer">
        &nbsp;
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            "responsive": true,
            "paging": true,
            "ordering": true,
            "info": false,
            "searching": false,
            "pageLength": 25,
        });
    });
</script>