@model IEnumerable<OneCard.Models.SwimmingHistoryViewModel>

@{
    ViewBag.Title = "游泳池历史数据汇总";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
            </hgroup>
        </div>
    </section>
}


@if (Model == null)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            SWIMMING POOL HISTORY
        </div>
        <div class="panel-body">
            @if(!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }

            @using (Html.BeginForm("SwimmingHistory", "Report", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div style="width:400px; margin:auto; text-align:center;">

                    <div class="form-group">
                        <div class='input-group date'>
                            <input type='text' class="form-control" id='datetimepicker1' name="StartTime" placeholder="起始时间" autocomplete="off" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class='input-group date'>
                            <input type='text' class="form-control" id='datetimepicker2' name="EndTime" placeholder="截至时间" autocomplete="off" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class='input-group'>
                            <input type='text' class="form-control" name="card" placeholder="游泳卡号" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-user"></span>
                            </span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">查 询</button>
                </div>
            }
        </div>
        <!-- /.panel-body -->
        <div class="panel-footer">
            &nbsp;
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            jQuery.datetimepicker.setLocale('zh');
            $('#datetimepicker1').datetimepicker({
                timepicker: false,
                format: 'Y/m/d',
                mask: false,
            });

            $('#datetimepicker2').datetimepicker({
                timepicker: false,
                format: 'Y/m/d',
                mask: false,
            });

        });
    </script>
}
else
{
    int total = Model.Sum(m => m.Count);
    
    <div class="panel panel-default">
        <div class="panel-heading">
            SWIMMING POOL HISTORY
        </div>
        <div class="panel-body">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success">
                    @ViewBag.SuccessMessage
                </div>
            }
            <div class="dataTable_wrapper" style="margin: auto auto;">
                <div style="text-align: right; float: right; margin: 10px 10px 0 0;">
                    <span>共<b>@Model.Count()</b>条记录   日期:<b>@ViewBag.Date</b></span>
                </div>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>游泳卡号</th>
                            <th style="text-align: center;">打卡次数</th>
                            <th style="text-align: center;">打卡时间</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (OneCard.Models.SwimmingHistoryViewModel item in Model)
                        {
                            <tr class="odd">
                                <td style="text-align: left; font-weight: bold; padding-left:20px;">@Html.DisplayFor(modelItem => item.CardNumber)</td>
                                <td style="text-align: center; font-weight:bold;">@Html.DisplayFor(modelItem => item.Count)</td>
                                <td style="text-align: center; font-weight:bold;">@Html.DisplayFor(modelItem => item.CheckInTime)</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <button type="button" class="btn btn-success" onclick="javastript: history.go(-1);" style="float: left; margin-top: -42px; ">
                    返 回
                </button>
                @using (Html.BeginForm("SwimmingHistory", "Report", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="StartTime" value="@ViewBag.StartTime" />
                    <input type="hidden" name="EndTime" value="@ViewBag.EndTime" />
                    <input type="hidden" name="card" value="@ViewBag.card" />
                    <input type="hidden" name="exportCSV" value="true" />
                    <button type="submit" class="btn btn-success" style="float: left;margin-top: -42px; margin-left: 65px;">
                        导 出
                    </button>
                }
                @using (Html.BeginForm("SwimmingHistory", "Report", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="StartTime" value="@ViewBag.StartTime" />
                    <input type="hidden" name="EndTime" value="@ViewBag.EndTime" />
                    <input type="hidden" name="card" value="@ViewBag.card" />
                    <input type="hidden" name="mail" value="true" />
                    <button type="submit" class="btn btn-success" style="float: left; margin-top: -42px; margin-left: 130px;">
                        发送至邮箱
                    </button>
                }
            </div>
            <!-- /.Table -->
        </div>
        <!-- /.panel-body -->
        <div class="panel-footer">
            &nbsp;
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                "responsive": true,
                "paging": true,
                "ordering": true,
                "info": false,
                "searching": false,
                "pageLength": 25,
            });
        });
    </script>
}