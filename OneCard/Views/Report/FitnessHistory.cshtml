@model IEnumerable<OneCard.Models.FitnessDataViewModel>

@{
    ViewBag.Title = "健身中心历史数据汇总";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
            </hgroup>
        </div>
    </section>
}


@if (Model == null)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            FITNESS CENTER HISTORY
        </div>
        <div class="panel-body">
            @if(!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }

            @using (Html.BeginForm("FitnessHistory", "Report", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div style="width:600px; margin:auto; text-align:center;">

                    <div class="form-group">
                        <div class='input-group date'>
                            <input type='text' class="form-control" id='datetimepicker1' name="StartTime" placeholder="起始时间" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class='input-group date'>
                            <input type='text' class="form-control" id='datetimepicker2' name="EndTime" placeholder="截至时间" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class='input-group'>
                            <input type='text' class="form-control" name="room" placeholder="房间号" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-user"></span>
                            </span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">查 询</button>
                </div>
            }
        </div>
        <!-- /.panel-body -->
        <div class="panel-footer">
            &nbsp;
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {

            $('#datetimepicker1').datepicker({
                format: "yyyy/m/d"
            });

            $('#datetimepicker2').datepicker({
                format: "yyyy/m/d"
            });

        });
    </script>
}
else
{
    int total = Model.Sum(m => m.Count);
    
    <div class="panel panel-default">
        <div class="panel-heading">
            FITNESS CENTER HISTORY
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper" style=" margin:auto auto;">
                <div style="text-align: right; float: right; margin: 10px 10px 0 0;">
                    <span>共<b>@Model.Count()</b>间客房 打卡<b>@total</b>次    日期:<b>@ViewBag.Date</b></span>
                </div>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>房间号</th>
                            <th style="text-align: center;">打卡次数</th>
                            <th style="text-align: center;">打卡时间</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd">
                                <td style="text-align: left; font-weight: bold; padding-left:20px;">@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                                <td style="text-align: center; font-weight:bold;">@Html.DisplayFor(modelItem => item.Count)</td>
                                <td style="text-align: center; ">@Html.DisplayFor(modelItem => item.CheckInTime)</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.Table -->
        </div>
        <!-- /.panel-body -->
        <div class="panel-footer">
            &nbsp;
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                "responsive": true,
                "paging": true,
                "ordering": true,
                "info": false,
                "searching": false,
                "pageLength": 25,
            });
        });
    </script>
}